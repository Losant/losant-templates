{{!--
Turbo Drive can leave Bootstrap tooltips hanging around
if the frame is reloaded while a tooltip is visible.
Need to remove all tooltips whenever frames load.
--}}

document.addEventListener('turbo:frame-load', () => {
  document.querySelectorAll('.tooltip').forEach((e) => e.remove());
});

